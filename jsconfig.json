{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/hooks/*": ["hooks/*"],
      "@/lib/*": ["lib/*"],
      "@/components/*": ["components/*"],
      "@/app/*": ["app/*"],
      "@/types/*": ["types/*"],
      "@/app_state": ["app_state.ts"],
      "@/auth": ["auth.ts"]
    },
    "checkJs": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
