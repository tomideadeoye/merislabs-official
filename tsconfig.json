{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@repo/ui": [
        "packages/ui/src"
      ],
      "@repo/ui/*": [
        "packages/ui/src/*"
      ],
      "@repo/shared": [
        "packages/shared/src"
      ],
      "@repo/shared/*": [
        "packages/shared/src/*"
      ],
      "@repo/sharedtypes": [
        "packages/sharedtypes"
      ],
      "@repo/sharedtypes/*": [
        "packages/sharedtypes/*"
      ],
      "@repo/sharedtypes/orion": [
        "packages/sharedtypes/orion"
      ],
      "@repo/sharedtypes/orion/*": [
        "packages/sharedtypes/orion/*"
      ],
      "@repo/sharedtypes/ideas": [
        "packages/sharedtypes/ideas"
      ],
      "@repo/sharedtypes/ideas/*": [
        "packages/sharedtypes/ideas/*"
      ],
      "@repo/sharedtypes/habitica": [
        "packages/sharedtypes/habitica"
      ],
      "@repo/sharedtypes/habitica/*": [
        "packages/sharedtypes/habitica/*"
      ],
      "@repo/sharedtypes/narrative-clarity": [
        "packages/sharedtypes/narrative-clarity"
      ],
      "@repo/sharedtypes/narrative-clarity/*": [
        "packages/sharedtypes/narrative-clarity/*"
      ],
      "@repo/sharedtypes/strategic-outreach": [
        "packages/sharedtypes/strategic-outreach"
      ],
      "@repo/sharedtypes/strategic-outreach/*": [
        "packages/sharedtypes/strategic-outreach/*"
      ],
      "@repo/sharedhooks": [
        "packages/shared/hooks"
      ],
      "@repo/sharedhooks/*": [
        "packages/shared/hooks/*"
      ],
      "@repo/sharedlib": [
        "packages/shared/lib",
        "packages/shared/src/lib"
      ],
      "@repo/sharedlib/*": [
        "packages/shared/lib/*",
        "packages/shared/src/lib/*"
      ],
      "@repo/sharedauth": [
        "packages/shared/auth.ts"
      ],
      "@repo/sharedapp_state": [
        "packages/shared/app_state.ts"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules",
    ".turbo",
    "dist",
    "build"
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
